{% extends "layout.njk" %}

{% block content %}
  <form class="card" method="POST" action="/instructors">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/10553730/500x500) no-repeat"></section>
    <section class="details">
      <h3>Detalhes</h3>
      <div class="item">
        <div>Novo Professor</div>
        <div><input type="text" name="name" placeholder="Nome completo"></div>
      </div>

      <div class="item">
        <div>Data de nascimento</div>
        <div><input type="date" name="birth"></div>
      </div>

      <div class="item">
        <div>Grau de escolaridade</div>
        <div><input type="text" name="level"></div>
      </div>

      <div class="item">
        <div>Tipo de aula</div>
        <div>
          <span><input type="radio" name="classroom" value="presential">Presencial</span>
          <span><input type="radio" name="classroom" value="distance">Distância</span>
        </div>
      </div>
      <div class="item">
        <div>Acompanhamento</div>
        <div><input type="text" name="subjects" placeholder="Separe as disciplinas por vírgula"></div>
      </div>

      <div class="item">
        <div>Desde</div>
        <div>01/01/01</div>
      </div>

      <button type="submit">Salvar</button>
    </section>
  </form>
{% endblock content %}